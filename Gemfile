# frozen_string_literal: true

source 'https://rubygems.org'

# Ruby library for Appium.
gem 'appium_lib'

# Appium Ruby Console.
gem 'appium_console'

# Behaviour Driven Development with elegance and joy
gem 'cucumber'

# Rake is a Make-like program implemented in Ruby.
# Tasks and dependencies are specified in standard Ruby syntax.
gem 'rake'

# WebDriver is a tool for writing automated tests of websites.
# It aims to mimic the behaviour of a real user, and as such interacts with the HTML of the application.
gem 'selenium-webdriver'

# An IRB alternative and runtime developer console
gem 'pry-nav'

# rspec-expectations provides a simple, readable API to express expected outcomes of a code example.
gem 'rspec-expectations'

# BDD for Ruby
gem 'rspec'

#Layout melhorado do test report
gem 'report_builder'

gem 'faker'

gem "cpf_faker"

gem 'webdrivers'